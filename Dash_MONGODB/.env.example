# MongoDB Configuration
MONGO_INITDB_DATABASE=research_db_structure
MONGO_HOST=mongo
MONGO_PORT=27017

# API Configuration
API_PORT=8000
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Streamlit Configuration
STREAMLIT_PORT=8501
API_BASE_URL=http://api:8000

# MongoDB URI (constructed from above values)
MONGO_URI=mongodb://${MONGO_HOST}:${MONGO_PORT}/${MONGO_INITDB_DATABASE}

# IMPORTANT: 
# 1. Copy this file to .env before deployment
# 2. Change JWT_SECRET_KEY to a strong random value in production
# 3. Never commit .env file to version control
